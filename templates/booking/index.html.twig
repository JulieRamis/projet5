{% extends 'base.html.twig' %}

{% block title %}Booking index{% endblock %}

{% block body %}
    <h1>Liste des repas</h1>


    <div class="content list">
        {% include 'nav.html.twig' %}
        <div class="container">
        <table class="table">
            <thead>
            <tr>
                <th>Début</th>
                <th>Fin</th>
                <th>Plat</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for booking in bookings %}
                <tr>
                    <td class="td-ingredient td-list">{{ booking.beginAt ? booking.beginAt|date('Y-m-d') : '' }}</td>
                    <td class="td-ingredient td-list">{{ booking.endAt ? booking.endAt|date('Y-m-d') : '' }}</td>
                    <td class="td-ingredient td-list">{{ booking.title }}</td>
                    <td class="td-ingredient">
                        <a href="{{ path('booking_show', {'id': booking.id}) }}"><button class="btn btn-warning">Voir</button></a>
                        <a href="{{ path('booking_edit', {'id': booking.id}) }}"><button class="btn btn-warning">Editer/Ajouter des ingrédients</button></a>
                    </td>
                </tr>
            {% else %}

                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
            <a href="{{ path('booking_new') }}">
                <button type="submit" class="btn btn-warning">Ajouter un nouveau plat </button>
            </a>
        </div>
    </div>
{% endblock %}
