{% extends 'base.html.twig' %}

{% block title %}Booking index{% endblock %}

{% block body %}
    <h1>Liste des repas</h1>


    <div class="content">
        {% include 'nav.html.twig' %}
        <table class="table">
            <thead>
            <tr>
                <th>N°</th>
                <th>Début</th>
                <th>Fin</th>
                <th>Plat</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for booking in bookings %}
                <tr>
                    <td>{{ booking.id }}</td>
                    <td>{{ booking.beginAt ? booking.beginAt|date('Y-m-d') : '' }}</td>
                    <td>{{ booking.endAt ? booking.endAt|date('Y-m-d') : '' }}</td>
                    <td>{{ booking.title }}</td>
                    <td>
                        <a href="{{ path('booking_show', {'id': booking.id}) }}">show</a>
                        <a href="{{ path('booking_edit', {'id': booking.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}

                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('booking_new') }}">Create new</a>
    </div>
{% endblock %}
