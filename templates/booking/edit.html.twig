{% extends 'base.html.twig' %}

{% block title %}Edition du plat{% endblock %}

{% block body %}
    <h1>Edition du plat</h1>
    <div class="content">

        {{ include('booking/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

        <hr/>
        <div class="container">
            <h2>Liste des ingrédients</h2>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Quantité</th>
                </tr>
                </thead>
                <tbody>
                {% for ingredient in booking.ingredientMenus %}
                    <tr>
                        <td>{{ ingredient.ingredient.name }}</td>
                        <td>{{ ingredient.quantity }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#exampleModalCenter">
                Ajouter un ingrédient
            </button>

            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
                 aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Ajouter un ingrédient</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            {{ form_start(form2) }}
                            <div class="form-group">
                                <label for="exampleInputEmail1">Ingrédient</label>
                                {{ form_widget(form2.ingredient, {'attr': {'class': ''}}) }}
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Quantité</label>
                                {{ form_widget(form2.quantity, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                            {{ form_end(form2) }}
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
           <a href="{{ path('booking_index') }}"> <button type="button" class="btn btn-warning">Retour à la liste</button></a>
            {{ include('booking/_delete_form.html.twig') }}
        </div>


    </div>
{% endblock %}
