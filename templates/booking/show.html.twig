{% extends 'base.html.twig' %}

{% block title %}Repas{% endblock %}

{% block body %}
    <div class="content">
        {% include 'nav.html.twig' %}
        <h1>{{ booking.title }}</h1>
        <p>Pour le : {{ booking.beginAt ? booking.beginAt|date('d-m-Y') : '' }}</p>

        <h2>Ingrédients :</h2>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Quantité</th>
            </tr>
            </thead>
            <tbody>
            {% for ingredient in booking.ingredientMenus %}
                <tr>
                    <td>{{ ingredient.ingredient.name }}</td>
                    <td>{{ ingredient.quantity }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div>

        </div>

        <a href="{{ path('booking_index') }}">Retour</a>

        <a href="{{ path('booking_edit', {'id': booking.id}) }}">Editer/Ajouter des ingrédients</a>

        {{ include('booking/_delete_form.html.twig') }}
    </div>
{% endblock %}
