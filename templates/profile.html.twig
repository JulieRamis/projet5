{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}

    <h1>Profil</h1>
    {% for message in app.flashes('message') %}
        <p>{{ message }}</p>
    {% endfor %}
    <div class="content">
        {% include 'nav.html.twig' %}
        <h3>Mes informations</h3>
        <p>{{ app.user.name }}</p>
        <p>{{ app.user.email }}</p>

        <a href="{{ path('edit_profile') }}">Modifier mon mot de passe</a>
        <a href="{{ path('edit_pass') }}">Modifier mon mot de passe</a>
        <a href="{{ path('delete_user', {'id':user.id}) }}">Modifier mon mot de passe</a>
        <a href="#">Supprimer mon compte</a>

    </div>

{% endblock %}