{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription</h1>

    {{ form_start(form) }}
    {{ form_row(form.name, {'label': 'Pseudo'}) }}
    {{ form_row(form.email, {'label': 'Adresse mail'}) }}
    {{ form_row(form.password, {'label': 'Mot de passe'}) }}
    {{ form_row(form.confirm_password, {'label': 'Confirmer le mot de passe'}) }}
    <button type="submit" class="btn">OK</button>
    {{ form_end(form) }}
{% endblock %}