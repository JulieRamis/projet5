{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1>Inscription</h1>
    <div class="content form-info">
        <div class="form-inscription col-sm-10 col-lg-6 ">
            {{ form_start(form) }}
            {{ form_row(form.name, {'label': 'Pseudo :'}) }}
            {{ form_row(form.email, {'label': 'Adresse mail :'}) }}
            {{ form_row(form.password, {'label': 'Mot de passe :'}) }}
            {{ form_row(form.confirm_password, {'label': 'Confirmer le mot de passe :'}) }}
            <div class="buttons-zone">
                <button type="submit" class="btn btn-outline-info col-2 ok-btn">OK</button>
            </div>
            <a class="nav-link" href="../">Retour à l'accueil</a>
            <a class="nav-link" href="../login">Déjà un compte ? Connectez-vous. </a>
            {{ form_end(form) }}</div>
    </div>
{% endblock %}